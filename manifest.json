{
  "name": "My Side Panel Extension",
  "manifest_version": 3,
  "version": "1.0",
  "description": "A side panel extension.",
  "permissions": [
    "sidePanel", 
    "storage"
  ],
  "action": {
    "default_title": "Open My Panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css" : ["sidebar.css"],
      "matches": [
        "https://chatgpt.com/*"
      ]
    }
  ]

}

